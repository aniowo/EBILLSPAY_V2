
@model IEnumerable<TransactionHistory>

@{
    ViewData["Title"] = "Retrieve";
}

<h1>Transaction History/Print Receipt</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Transaction History</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="TransactionHistory" asp-action = "Index" class='btn btn-primary'>
                Back
            </a>
        </div>
    </div>
    <br /><br />

 
        <table class="d-lg-table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Session Id
                    </th>
                    <th>
                        Narration
                    </th>
                    <th>
                        Originator
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Beneficiary
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Date Initiated
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="10%">
                            @item.SessionId
                        </td>
                        <td width="40%">
                            @item.Narration
                        </td>
                        <td width="10%">
                            @item.Originator
                        </td>
                        <td width="5%">
                            @item.Amount
                        </td>
                        <td width="10%">
                            @item.Beneficiary
                        </td>
                        <td width="15%">
                            @item.Description
                        </td>
                        <td width="10%">
                            @item.DateInitiated
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                            <a asp-controller="TransactionHistory" asp-action="Print" asp-route-sessionId="@item.SessionId" class="btn btn-primary mx-2 custom_btn"> <i class="bi bi-printer"></i> &nbsp; Print Receipt</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    

