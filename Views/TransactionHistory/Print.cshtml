@model PrintReceipt

<form method="post" asp-action="Print">
    <input asp-for="SessionId" hidden />  
    <input asp-for="Narration" hidden />  
    <input asp-for="Amount" hidden />  
    <input asp-for="DateInitiated" hidden />  
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class"text-primary">Print Receipt</h2>
            <hr />
        </div>

          <div class="mb-3">
            <label asp-for="SessionId"></label>
            <input asp-for="SessionId" class="form-control" disabled/>
            <span asp-validation-for="SessionId" class="text-danger"></span>
        </div>
 
        <div class="mb-3">
            <label asp-for="Narration"></label>
            <input asp-for="Narration" class="form-control" disabled/>
            <span asp-validation-for="Narration" class="text-danger"></span>
        </div>

          <div class="mb-3">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control" disabled/>
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

          <div class="mb-3">
            <label asp-for="DateInitiated"></label>
            <input asp-for="DateInitiated" class="form-control" disabled/>
            <span asp-validation-for="DateInitiated" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Print</button>
        <a asp-controller="TransactionHistory" asp-action="Retrieve" class="btn btn-secondary" style="width:150px">Back</a>

    </div>

</form>



